<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/base_horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.ghllz.travel.view.CircleImageView
            android:id="@+id/cv_diary_cover_userHeadImg"
            android:layout_width="@dimen/item_diary_title_width"
            android:layout_height="@dimen/item_diary_title_height"
            android:layout_margin="10dp"
            android:src="@color/gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_diary_cover_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_diary_content_height" >

        <ImageView
            android:id="@+id/iv_diary_cover_headImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/gray" />

        <TextView
            android:id="@+id/tv_diary_cover_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="泰国芭提雅、清迈、曼谷十天之旅"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_diary_cover_days"
            android:layout_width="@dimen/item_diary_bottum_height"
            android:layout_height="@dimen/item_diary_bottum_width"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:src="@drawable/collect_time" />

        <TextView
            android:id="@+id/tv_diary_cover_days"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_diary_bottum_height"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:gravity="bottom"
            android:text="0"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_diary_cover_like"
            android:layout_width="@dimen/item_diary_bottum_height"
            android:layout_height="@dimen/item_diary_bottum_width"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:src="@drawable/iv_diary_cover_like_selector" />

        <TextView
            android:id="@+id/tv_diary_cover_likeNume"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_diary_bottum_height"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:gravity="bottom"
            android:text="0"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_diary_cover_location"
            android:layout_width="@dimen/item_diary_bottum_height"
            android:layout_height="@dimen/item_diary_bottum_width"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:src="@drawable/iv_diary_cover_location_selector" />

        <TextView
            android:id="@+id/tv_diary_cover_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_diary_bottum_height"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:gravity="bottom"
            android:text="无"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/base_horizontal_line" />

</LinearLayout>