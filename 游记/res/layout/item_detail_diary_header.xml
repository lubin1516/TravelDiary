<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
	>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_diary_content_height" >

        <ImageView
            android:id="@+id/iv_detail_diary_headImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/gray" />

        <TextView
            android:id="@+id/tv_detail_diary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_detail_diary_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/iv_diary_cover_like_selector" />

        <TextView
            android:id="@+id/tv_detail_diary_likeNume"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="@dimen/item_diary_bottum_margin"
            android:gravity="bottom"
            android:text="0"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_detail_diary_days"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/collect_time" />

        <TextView
            android:id="@+id/tv_detail_diary_days"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="bottom"
            android:text="0å¤©"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/base_horizontal_line" />

     <TextView
        android:id="@+id/tv_detail_diary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="16sp" />

     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/base_horizontal_line" />
    
</LinearLayout>